<!DOCTYPE HTML>
<html>
<head>
    <title>The Bewery | ASP.NET APP</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/AssetMainPage/css/style.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/AssetMainPage/css/slider.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/AssetMainPage/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/AssetMainPage/js/slidermodernizr.custom.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <!------ Background slider ------->
    <div class="slider">
        <ul id="cbp-bislideshow" class="cbp-bislideshow">
            <li><img src="../../AssetMainPage/images/1.jpg" alt="image01" /></li>
            <li><img src="../../AssetMainPage/images/2.jpg"  alt="image02"/></li>
            <li><img src="../../AssetMainPage/images/3.jpg" alt="image03" /></li>
            <li><img src="../../AssetMainPage/images/4.jpg" alt="image04" /></li>
            <li><img src="../../AssetMainPage/images/5.jpg" alt="image05" /></li>
            <li><img src="../../AssetMainPage/images/6.jpg" alt="image06" /></li>
        </ul>
        <script src="AssetMainPage/js/jquery.imagesloaded.min.js"></script>
        <script src="AssetMainPage/js/cbpBGSlideshow.min.js"></script>
        <script>
            $(function () {
                cbpBGSlideshow.init();
            });
        </script>
    </div>
    <!------ End Background slider ------->
    <div class="header_top">
        <div class="wrap">
            <div class="logo">
                <a href="@Url.Action("Index","Home")"><img src="../../AssetMainPage/images/logo.png" alt=""></a>
            </div>
            <div class="nav">
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="about.html">About</a></li>
                    <li><a href="events.html">Gallery</a></li>
                    <li><a href="events.html">Events</a></li>
                    <li><a href="blog.html">Blog</a></li>
                    <li><a href="contact.html">Contact</a></li>
                    <div class="clear"></div>
                </ul>
            </div>

            <div class="clear"></div>
        </div>
    </div>

    <div class="social-icons">
        <ul>
            <li><a class="facebook" href="#" target="_blank"> </a></li>
            <li><a class="twitter" href="#" target="_blank"></a></li>
            <li><a class="googleplus" href="#" target="_blank"></a></li>
            <li><a class="pinterest" href="#" target="_blank"></a></li>
            <li><a class="dribbble" href="#" target="_blank"></a></li>
            <li><a class="vimeo" href="#" target="_blank"></a></li>
        </ul>
    </div>

    <div class="wrap">
        <div class="main">
            @RenderBody()
        </div>
    </div>

    <div class="copy_right">
        <div class="wrap">
            <p> &copy; @DateTime.Now.Year Brewery App | Design by <a href="http://w3layouts.com/">W3layouts</a>
            Implementado por Marcelo Biberg, consumindo API Paypal para compra única.
            </p>

        </div>

    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
